@using WebApplication1.Data
@model WebApplication1.Models.SupplementDto

@{
    ViewData["Title"] = "项目执行详情";
    var approval = (Approval)ViewBag.Entity;
}

<h2>@approval.CustomerUnit</h2>
<h4>@approval.ProjectName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Supplement">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderNo" class="control-label"></label>
                <textarea asp-for="OrderNo" class="form-control" rows="4"></textarea>
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsHasInvoice" /> @Html.DisplayNameFor(model => model.IsHasInvoice)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TaxPoint" class="control-label"></label>
                <input asp-for="TaxPoint" class="form-control" />
                <span asp-validation-for="TaxPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentInfo" class="control-label"></label>
                <textarea asp-for="PaymentInfo" class="form-control" rows="4"></textarea>
                <span asp-validation-for="PaymentInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualClosingAmount" class="control-label"></label>
                <input asp-for="ActualClosingAmount" type="number" class="form-control" />
                <span asp-validation-for="ActualClosingAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualClosingProfit" class="control-label"></label>
                <input asp-for="ActualClosingProfit" type="number" class="form-control" />
                <span asp-validation-for="ActualClosingProfit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Collections" class="control-label"></label>
                <textarea asp-for="Collections" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Collections" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompleteAt" class="control-label"></label>
                <input asp-for="CompleteAt" type="date" class="form-control" />
                <span asp-validation-for="CompleteAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 col-xs-6">
                    <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-link">返回列表</a>
                </div>
                <div class="col-md-6 col-xs-6 text-right">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-default">查看详情</a>
                    <input type="submit" value="提交" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>

