@model WebApplication1.Models.ApprovalDto

@{
    ViewData["Title"] = "创建申请";
}

<h2>创建申请</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="ApplicantNo" type="hidden" />
            <input asp-for="DepartmentId" type="hidden" />
            <div class="form-group">
                <label asp-for="ApplicantName" class="control-label"></label>
                <input asp-for="ApplicantName" readonly="readonly" class="form-control" />
                <span asp-validation-for="ApplicantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerUnit" class="control-label"></label>
                <input asp-for="CustomerUnit" class="form-control" />
                <span asp-validation-for="CustomerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerJob" class="control-label"></label>
                <input asp-for="CustomerJob" class="form-control" />
                <span asp-validation-for="CustomerJob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedClosingDate" class="control-label"></label>
                <input asp-for="ExpectedClosingDate" class="form-control" />
                <span asp-validation-for="ExpectedClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedClosingCost" class="control-label"></label>
                <input asp-for="ExpectedClosingCost" class="form-control" />
                <span asp-validation-for="ExpectedClosingCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedClosingProfit" class="control-label"></label>
                <input asp-for="ExpectedClosingProfit" class="form-control" />
                <span asp-validation-for="ExpectedClosingProfit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliedAmount" class="control-label"></label>
                <input asp-for="AppliedAmount" class="form-control" />
                <span asp-validation-for="AppliedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliedReason" class="control-label"></label>
                <textarea asp-for="AppliedReason" class="form-control"></textarea>
                <span asp-validation-for="AppliedReason" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="提交申请" class="btn btn-primary" />
                <a href="javascript:window.history.go(-1)" class="btn btn-default">返回</a>
            </div>
        </form>
    </div>
</div>

<div class="text-right">
    <a asp-action="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
